<div class='center2'>
    <div class='border'>
        <div class='flex jstSbt'>
            Post by <%= @post.author.name %>
            <div>
                Comments : <%= @post.comment_counter %>,
                Likes : <%= @post.likes_counter %>
            </div>
        </div>

        <div>
            <%= @post.title %>
        </div>
    </div>

    <div class='border'>
    <% if @post.comments.count.zero? %>
    <p> Post has no comments yet </p>
    <% else %>
    <% @post.comments.each do |comment| %>
        <div>
            <%= comment.author.name %>:
            <%= comment.text %> 
        </div>
        <div>
        </div>
    <% end %>
    <% end %>
</div>
</div>